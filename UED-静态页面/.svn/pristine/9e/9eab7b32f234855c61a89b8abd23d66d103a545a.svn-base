<script>
  $(function(){
   /*点击checkbox*/
    $(document).on('click','.select-order table .select-check',function(){
        if(!$(this).hasClass('active')){
          $(this).addClass('active');
          $(this).parents('tr').addClass('selecter');
        }else{
          $(this).removeClass('active');
          $(this).parents('tr').removeClass('selecter');
        }
         return false;
    });

    /*切换发票状态*/
    $(document).on('click','.invoice-info .invoice-card',function(){
        $('.invoice-info .invoice-card').each(function(){
          $(this).removeClass('current');
        });
        $(this).addClass('current');
    });

    //删除弹窗
    $(document).on('click','.delete-img',function(){
        $('#eject-mask').css('display','block');
        $('[delete-dlog]').css('display','block');
    });

    //提示弹窗
    $(document).on('click','[save]',function(){
        $('#eject-mask').css('display','block');
        $('[setting-dialog]').css('display','block');
    });

    //新增/编辑弹窗
    $(document).on('click','[add-invoice],[edit-btn]',function(){
        $('#eject-mask').css('display','block');
        $('.add-msg').css('display','block');
    });
    $(document).on('click','#add-determine,#add-cancel',function(){
        $('#eject-mask').css('display','none');
        $('.add-msg').css('display','none'); 
    });
    $(document).on('click','ul li a',function(){
      var text = $(this).text();
      if (text == '增值税专用发票') {
        $('[drop-down]').text('增值税专用发票');
        $('.normal-bill').css('display','none');
        $('.special-bill').css('display','block');
      }else{
        $('[drop-down]').text('增值税普通发票');
        $('.normal-bill').css('display','block');
        $('.special-bill').css('display','none');
      }
    });
  });
</script>
</body>
</html>