<script type="text/javascript">
$(function(){
  $('.operate .checkbox').iCheck({
     checkboxClass: 'icheckbox_flat-blue',
      radioClass: 'iradio_flat-blue'
   });

  //点击联系人卡片区域事件
  $(document).on('click', '[cont-people]',function(){
    $(this).addClass('current').siblings().removeClass('current');
  });

  $('.active').find('.icheckbox_flat-blue').addClass('checked');
  //点击设置默认地址事件
  $(document).on('click', '[setting-left]', function(){
    $(this).addClass('active');
    if($(this).hasClass('active')){
      $('.active').find('.txt').text('默认地址');
      $(this).find('.icheckbox_flat-blue').addClass('checked');
    }
    $(this).parents('[cont-people]').siblings().find('[setting-left]').removeClass('active');
    $(this).parents('[cont-people]').siblings().find('.icheckbox_flat-blue').removeClass('checked');
    $(this).parents('[cont-people]').siblings().find('.txt').text('设为默认');
  });
});

</script>
